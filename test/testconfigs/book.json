{
    "model": "Book",
    "batchSize": 400,
    "indexOnStart": true,
    "forceIndexOnStart": false,
    "forceDeleteOnStart": true,
    "dbQuery": {
        "collection": "Book",
        "include": {
            "user": {
                "relation": "belongsTo",
                "collection": "User",
                "foreignKey": "userId"
            }
        },
        "fields": [
            "_id",
            "title",
            "description",
            "rating",
            "userId",
            "publishedDate",
            {
                "field": "userName",
                "value": "user.firstName"
            }
        ]
    },
    "indexSettings": {
        "settings": {},
        "mappings": {
            "properties": {
                "_id": {
                    "type": "keyword"
                }
            }
        }
    }
}