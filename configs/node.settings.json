{
    "collection": "Node",
    "index_name": "ltd_nodes",
    "index_on_start": true,
    "force_delete": false,
    "batch_size": 500,
    "skip_after_seconds": 86400,
    "update_field": "updated",
    "aggregation_pipeline": [
        {
            "$project": {
                "doc_type": "Node",
                "level": 1,
                "hidden": 1,
                "deleted": 1,
                "nodeType": 1,
                "text": 1,
                "parentIds": 1,
                "parentId": 1
            }
        }
    ],
    "index_params": {
        "settings": {
            "index.number_of_shards": 4,
            "index.number_of_replicas": 2,
            "analysis": {
                "filter": {
                    "custom_edgegram": {
                        "type": "edge_ngram",
                        "min_gram": "1",
                        "max_gram": "100"
                    },
                    "wordsdelimeter": {
                        "catenate_words": true,
                        "catenate_all": true,
                        "preserve_original": true,
                        "type": "word_delimiter",
                        "catenate_numbers": true
                    }
                },
                "analyzer": {
                    "autocomplete_analyzer": {
                        "filter": [
                            "lowercase",
                            "wordsdelimeter",
                            "custom_edgegram"
                        ],
                        "type": "custom",
                        "tokenizer": "whitespace"
                    },
                    "autosearch": {
                        "filter": [
                            "lowercase",
                            "wordsdelimeter"
                        ],
                        "type": "custom",
                        "tokenizer": "whitespace"
                    }
                }
            }
        },
        "mappings": {
            "dynamic": false,
            "properties": {
                "text": {
                    "type": "text",
                    "analyzer": "autocomplete_analyzer",
                    "search_analyzer": "autosearch"
                },
                "parentId": {
                    "type": "text",
                    "analyzer": "autocomplete_analyzer",
                    "search_analyzer": "autosearch",
                    "fields": {
                        "keyword": {
                            "type": "keyword"
                        }
                    }
                },
                "nodeType": {
                    "type": "text",
                    "analyzer": "autocomplete_analyzer",
                    "search_analyzer": "autosearch",
                    "fields": {
                        "keyword": {
                            "type": "keyword"
                        }
                    }
                },
                "hidden": {
                    "type": "boolean",
                    "fields": {
                        "keyword": {
                            "type": "keyword"
                        }
                    }
                },
                "deleted": {
                    "type": "boolean",
                    "fields": {
                        "keyword": {
                            "type": "keyword"
                        }
                    }
                },
                "level": {
                    "type": "text",
                    "analyzer": "autocomplete_analyzer",
                    "search_analyzer": "autosearch",
                    "fields": {
                        "keyword": {
                            "type": "keyword"
                        }
                    }
                },
                "doc_type": {
                    "type": "text",
                    "analyzer": "autocomplete_analyzer",
                    "search_analyzer": "autosearch",
                    "fields": {
                        "keyword": {
                            "type": "keyword"
                        }
                    }
                },
                "id": {
                    "type": "text",
                    "analyzer": "autocomplete_analyzer",
                    "search_analyzer": "autosearch",
                    "fields": {
                        "keyword": {
                            "type": "keyword"
                        }
                    }
                }
            }
        }
    }
}